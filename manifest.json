{
  "manifest_version": 3,
  "name": "Ezmon",
  "version": "2.0",
  "description": "Integration application for checkmk.",
  "background": {
    "service_worker": "js/background.js"
  },
  "options_ui": {
    "page": "html/options.html"
  },
  "permissions": [
   "storage",
    "activeTab",
    "notifications"
  ],
  "icons": {
    "16": "icons/status_unkown16x16.png",
    "24": "icons/status_red16x16.png",
    "32": "icons/status_yellow16x16.png",
    "48": "icons/status_green16x16.png",
    "64": "icons/status_black16x16.png"
  },
  "action": {
    "default_popup": "html/popup.html",
    "1": "sounds/ping.mp3"
  },
  "content_security_policy": {},
  "host_permissions": [
    "https://server/*"
  ]

}