{
    "manifest_version": 2,
    "name": "Ezmon",
    "version": "1.1",
    "description": "Integration application for zmon.",
    "browser_action": { 
      "default_popup": "html/popup.html",
        "1" : "sounds/ping.mp3",                 
        "16": "icons/status_green16x16.png",           
        "24": "icons/status_red16x16.png",           
        "32": "icons/status_yellow16x16.png",   
        "48": "icons/status_black16x16.png",
        "64": "icons/status_unkown16x16.png"        
      },
      "background": {
        "scripts": [
          "js/common.js",
          "js/sites.js",
          "js/background.js"
        ]
      },
    "options_ui": {
        "chrome_style": false,
        "page": "html/options.html"
    },
    "permissions": [
         "http://YourCustomer/",
         "storage"
       ],
    "icons": {
         "16": "icons/icon16x16.png",
         "48": "icons/icon48x48.png",
         "128": "icons/icon128x128.png"
         }       
}